<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration for Anwesha 2.0</title>
    <style>
        /* Basic Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #1b1b32;
            color: #f4f4f9;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        .container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
        }
        header {
            text-align: center;
            background: linear-gradient(135deg, #ff8e53, #e54d4d);
            color: #fff;
            padding: 40px 20px;
        }
        header h1 {
            margin: 0;
            font-size: 2.4em;
        }
        .form-section {
            background-color: #2a2a45;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
            margin-top: 20px;
        }
        .form-section h2 {
            color: #ffd700;
            font-size: 1.8em;
            margin-bottom: 20px;
            text-align: center;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #ffd700;
            font-weight: bold;
        }
        input[type="text"], input[type="email"], select {
            width: 100%;
            padding: 12px;
            border-radius: 5px;
            border: none;
            background-color: #f4f4f9;
            font-size: 1em;
            color: #333;
        }
        input[type="text"]:focus, input[type="email"]:focus, select:focus {
            outline: none;
            box-shadow: 0px 0px 5px 2px rgba(255, 204, 0, 0.5);
        }
        .submit-btn {
            width: 100%;
            padding: 12px;
            margin-top: 15px;
            background-color: #ffd700;
            color: #333;
            font-size: 1.1em;
            border-radius: 5px;
            border: none;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s;
        }
        .submit-btn:hover {
            background-color: #ffa500;
            color: #fff;
        }
        footer {
            text-align: center;
            background-color: #2a2a45;
            color: #ddd;
            padding: 15px 0;
            margin-top: 20px;
        }
    </style>
</head>
<body>

<div class="container">
    <!-- Header Section -->
    <header>
        <h1>Register for Technocrats Carnival 2024</h1>
        <p>Be part of an exciting day filled with innovation, creativity, and teamwork!</p>
    </header>

    <!-- Registration Form Section -->
    <section class="form-section">
        <h2>Registration Form</h2>
        <form action="#" method="post">
            <!-- Name -->
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required>
            </div>

            <!-- Enrollment Number -->
            <div class="form-group">
                <label for="enrollment">Enrollment Number</label>
                <input type="text" id="enrollment" name="enrollment" required>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="email">Email ID</label>
                <input type="email" id="email" name="email" required>
            </div>

            <!-- College -->
            <div class="form-group">
                <label for="college">College</label>
                <input type="text" id="college" name="college" required>
            </div>

            <!-- Event Name -->
            <div class="form-group">
                <label for="year">Events List</label>
                <select id="year" name="year" required>
                    <option value="">Select Event</option>
                    <option value="1">ROBO RACE</option>
                    <option value="2">ROBO WAR</option>
                    <option value="3">HACKATHON</option>
                    <option value="4">CODE CLASH 3.0</option>
                    <option value="5">FREE FIRE</option>
                    <option value="6">BGMI</option>
                    <option value="7">MUSICAL CHAIR</option>
                    <option value="8">RENEWABLE MODEL SHOWCASE</option>
                    <option value="9">DUMCHARADE</option>
                    <option value="10">OPEN MIC</option>
                    <option value="11">STORY TELLING</option>
                    <option value="12">CORPORATE CHALLENGE SHOWDOWN</option>
                    <option value="13">ENTREPRENEURSHIP SALES STALL</option>
                    <option value="14">ESCAPE ROOM/ BUSINESS</option>
                    <option value="15">ENTREPRENEURIAL MEME CONTEST</option>
                    <option value="16">RUNNING COMPETITION/ MARATHON</option>
                    <option value="17">TUG OF WAR</option>
                    <option value="18">DEBATE COMPETITION</option>
                    <option value="19">TECHNICAL PRESENTATION</option>
                    <option value="20">CRAFT CARNIVAL/ POSTER MAKING, SLOGAN WRITING</option>
                    <option value="21">SCREEN TO SPEECH</option>
                    <option value="22">OUT OF BOX</option>
                    <option value="23">FLASH CLASH OF STYLES: THE DANNCE FACE-OFF</option>
                    <option value="24">TECH THEME TREASURE HUNT</option>
                    <option value="25">SKYHIGH SNAP AND SOLVE</option>
                    <option value="26">HOVERHUNT</option>
                    <option value="27">TECHNICAL QUIZ</option>
                </select>
            </div>

            <!-- NUMBER OF PARTICIPANTS -->
            <div class="form-group">
                <label for="number">Number of Participants</label>
                <select id="number" name="number" onchange="generateParticipantFields()" required>
                    <option value="">Select </option>
                    <option value="1">Solo</option>
                    <option value="2">Duo</option>
                    <option value="3">Trio</option>
                    <option value="4">Team</option>
                </select>
            </div>

            <div id="participantsContainer"></div>

            <!-- Submit Button -->
            <button type="submit" class="submit-btn">Submit Registration</button>
        </form>
    </section>
</div>

<!-- Footer Section -->
<footer>
    <p>&copy; 2024 Technocrats Group of Institutes. All rights reserved.</p>
</footer>

<script>
    // Define number of participants options
    function generateParticipantFields() {
        const numParticipants = parseInt(document.getElementById("number").value);
        const participantsContainer = document.getElementById("participantsContainer");

        // Clear previous participant fields
        participantsContainer.innerHTML = "";

        // Generate input fields for each participant
        for (let i = 1; i <= numParticipants; i++) {
            const participantDiv = document.createElement("div");
            participantDiv.classList.add("form-group");

            const nameLabel = document.createElement("label");
            nameLabel.innerText = `Participant ${i} Name`;
            const nameInput = document.createElement("input");
            nameInput.type = "text";
            nameInput.name = `participant${i}_name`;
            nameInput.required = true;

            const enrollmentLabel = document.createElement("label");
            enrollmentLabel.innerText = `Participant ${i} Enrollment`;
            const enrollmentInput = document.createElement("input");
            enrollmentInput.type = "text";
            enrollmentInput.name = `participant${i}_enrollment`;
            enrollmentInput.required = true;

            const yearLabel = document.createElement("label");
            yearLabel.innerText = `Participant ${i} Year`;
            const yearInput = document.createElement("input");
            yearInput.type = "text";
            yearInput.name = `participant${i}_year`;
            yearInput.required = true;

            participantDiv.appendChild(nameLabel);
            participantDiv.appendChild(nameInput);
            participantDiv.appendChild(enrollmentLabel);
            participantDiv.appendChild(enrollmentInput);
            participantDiv.appendChild(yearLabel);
            participantDiv.appendChild(yearInput);

            participantsContainer.appendChild(participantDiv);
        }
    }
</script>

</body>
</html>