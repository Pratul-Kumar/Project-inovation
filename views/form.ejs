<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration for Anwesha 2.0</title>
    <style>
        /* Basic Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #1b1b32;
            color: #f4f4f9;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        .container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
        }
        header {
            text-align: center;
            background: linear-gradient(135deg, #ff8e53, #e54d4d);
            color: #fff;
            padding: 40px 20px;
        }
        header h1 {
            margin: 0;
            font-size: 2.4em;
        }
        .form-section {
            background-color: #2a2a45;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
            margin-top: 20px;
        }
        .form-section h2 {
            color: #ffd700;
            font-size: 1.8em;
            margin-bottom: 20px;
            text-align: center;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #ffd700;
            font-weight: bold;
        }
        input[type="text"], input[type="email"], select {
            width: 100%;
            padding: 12px;
            border-radius: 5px;
            border: none;
            background-color: #f4f4f9;
            font-size: 1em;
            color: #333;
        }
        input[type="text"]:focus, input[type="email"]:focus, select:focus {
            outline: none;
            box-shadow: 0px 0px 5px 2px rgba(255, 204, 0, 0.5);
        }
        .submit-btn {
            width: 100%;
            padding: 12px;
            margin-top: 15px;
            background-color: #ffd700;
            color: #333;
            font-size: 1.1em;
            border-radius: 5px;
            border: none;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s;
        }
        .submit-btn:hover {
            background-color: #ffa500;
            color: #fff;
        }
        footer {
            text-align: center;
            background-color: #2a2a45;
            color: #ddd;
            padding: 15px 0;
            margin-top: 20px;
        }
    </style>
</head>
<body>

<div class="container">
    <!-- Header Section -->
    <header>
        <h1>Register for Technocrats Carnival 2024</h1>
        <p>Be part of an exciting day filled with innovation, creativity, and teamwork!</p>
    </header>

    <!-- Registration Form Section -->
    <section class="form-section">
        <h2>Registration Form</h2>
        <form action="#" method="post">

            <!-- College -->
            <div class="form-group">
                <label for="college">College</label>
                <input type="text" id="college" name="college" required>
            </div>

            <!-- Event Name -->
            <div class="form-group">
                <label for="events">Events List</label>
                <select id="events" name="events" onchange="updateParticipantsOption()" required>
                    <option value="">Select Event</option>
                    <option value="ROBO RACE">ROBO RACE</option>
                    <option value="ROBO WAR">ROBO WAR</option>
                    <option value="HACKATHON">HACKATHON</option>
                    <option value="CODE CLASH 3.0">CODE CLASH 3.0</option>
                    <option value="FREE FIRE">FREE FIRE</option>
                    <option value="BGMI">BGMI</option>
                    <option value="MUSICAL CHAIR">MUSICAL CHAIR</option>
                    <option value="RENEWABLE MODEL SHOWCASE">RENEWABLE MODEL SHOWCASE</option>
                    <option value="DUMCHARADE">DUMCHARADE</option>
                    <option value="OPEN MIC">OPEN MIC</option>
                    <option value="STORY TELLING">STORY TELLING</option>
                    <option value="CORPORATE CHALLENGE SHOWDOWN">CORPORATE CHALLENGE SHOWDOWN</option>
                    <option value="ENTREPRENEURSHIP SALES STALL">ENTREPRENEURSHIP SALES STALL</option>
                    <option value="ESCAPE ROOM/ BUSINESS">ESCAPE ROOM/ BUSINESS</option>
                    <option value="ENTREPRENEURIAL MEME CONTEST">ENTREPRENEURIAL MEME CONTEST</option>
                    <option value="RUNNING COMPETITION/ MARATHON">RUNNING COMPETITION/ MARATHON</option>
                    <option value="TUG OF WAR">TUG OF WAR</option>
                    <option value="DEBATE COMPETITION">DEBATE COMPETITION</option>
                    <option value="TECHNICAL PRESENTATION">TECHNICAL PRESENTATION</option>
                    <option value="CRAFT CARNIVAL/ POSTER MAKING, SLOGAN WRITING">CRAFT CARNIVAL/ POSTER MAKING, SLOGAN WRITING</option>
                    <option value="SCREEN TO SPEECH">SCREEN TO SPEECH</option>
                    <option value="OUT OF BOX">OUT OF BOX</option>
                    <option value="FLASH CLASH OF STYLES: THE DANCE FACE-OFF">FLASH CLASH OF STYLES: THE DANNCE FACE-OFF</option>
                    <option value="TECH THEME TREASURE HUNT">TECH THEME TREASURE HUNT</option>
                    <option value="SKYHIGH SNAP AND SOLVE">SKYHIGH SNAP AND SOLVE</option>
                    <option value="HOVERHUNT">HOVERHUNT</option>
                    <option value="TECHNICAL QUIZ">TECHNICAL QUIZ</option>
                </select>
            </div>

            <!-- NUMBER OF PARTICIPANTS -->
            <div class="form-group">
                <label for="number">Number of Participants</label>
                <select id="number" name="number" onchange="displayParticipantDetails()" required>
                    <option value="">Select </option>
                </select>
            </div>

            <div id="participantsDetails"></div>

            <!-- Submit Button -->
            <button type="submit" class="submit-btn">Submit Registration</button>
        </form>
    </section>
</div>

<!-- Footer Section -->
<footer>
    <p>&copy; 2024 Technocrats Group of Institutes. All rights reserved.</p>
</footer>

<script>
    // Define max participants for each event and labels
    const eventMaxParticipants = {
        "ROBO RACE": ["SOLO"],
        "ROBO WAR": ["GROUP"],
        "HACKATHON": ["DUO", "GROUP"],
        "CODE CLASH 3.0": ["SOLO"],
        "FREE FIRE": ["SOLO", "GROUP"],
        "BGMI": ["SOLO", "GROUP"],
        "MUSICAL CHAIR": ["SOLO"],
        "RENEWABLE MODEL SHOWCASE": ["SOLO"],
        "DUMCHARADE": ["DUO", "GROUP"],
        "OPEN MIC": ["SOLO"],
        "STORY TELLING": ["SOLO"],
        "CORPORATE CHALLENGE SHOWDOWN": ["SOLO", "GROUP"],
        "ENTREPRENEURSHIP SALES STALL": ["SOLO", "GROUP"],
        "ESCAPE ROOM/ BUSINESS": ["DUO", "GROUP"],
        "ENTREPRENEURIAL MEME CONTEST": ["SOLO", "DUO"],
        "RUNNING COMPETITION/ MARATHON": ["SOLO"],
        "TUG OF WAR": ["DUO", "GROUP"],
        "DEBATE COMPETITION": ["GROUP"],
        "TECHNICAL PRESENTATION": ["SOLO", "GROUP"],
        "CRAFT CARNIVAL/ POSTER MAKING, SLOGAN WRITING": ["SOLO"],
        "SCREEN TO SPEECH" : ["SOLO"],
        "OUT OF BOX" : ["SOLO"],
        "FLASH CLASH OF STYLES: THE DANCE FACE-OFF": ["SOLO", "DUO", "GROUP"],
        "TECH THEME TREASURE HUNT": ["GROUP"],
        "SKYHIGH SNAP AND SOLVE": ["GROUP"],
        "HOVERHUNT": ["SOLO"],
        "TECHNICAL QUIZ": ["SOLO"],
        // Add more events with their max participants here
    };

    function updateParticipantsOption() {
        const eventSelect = document.getElementById("events");
        const numberSelect = document.getElementById("number");
        const selectedEvent = eventSelect.value;

        // Clear current options in the "Number of Participants" dropdown
        numberSelect.innerHTML = '<option value="">Select</option>';

        // Populate the dropdown based on the selected event's participant options
        if (eventMaxParticipants[selectedEvent]) {
            const participantOptions = eventMaxParticipants[selectedEvent];
            participantOptions.forEach(option => {
                const newOption = document.createElement("option");
                newOption.value = option.toLowerCase(); // use lowercase for value
                newOption.textContent = option;
                numberSelect.appendChild(newOption);
            });
        }
    }

    // Define number of participants options
    function displayParticipantDetails() {
        const numberSelect = document.getElementById("number").value;
        const participantsDetails = document.getElementById("participantsDetails");

        // Clear previous participant details
        participantsDetails.innerHTML = "";

        // Show fields based on participant type
        if (numberSelect === "SOLO") {
            participantsDetails.innerHTML = `
                <div class="form-section">
                    <h3>Participant Information</h3>
                    <div class="form-group">
                        <label for="soloName">Name</label>
                        <input type="text" id="soloName" name="soloName" required>
                    </div>
                    <div class="form-group">
                        <label for="soloEnrollment">Enrollment Number</label>
                        <input type="text" id="soloEnrollment" name="soloEnrollment" required>
                    </div>
                    <div class="form-group">
                        <label for="soloEmail">Email ID</label>
                        <input type="email" id="soloEmail" name="soloEmail" required>
                    </div>
                </div>
            `;
        } else if (numberSelect === "DUO") {
            participantsDetails.innerHTML = `
                <div class="form-section">
                    <h3>Team Leader Information</h3>
                    <div class="form-group">
                        <label for="leaderName">Name</label>
                        <input type="text" id="leaderName" name="leaderName" required>
                    </div>
                    <div class="form-group">
                        <label for="leaderEnrollment">Enrollment Number</label>
                        <input type="text" id="leaderEnrollment" name="leaderEnrollment" required>
                    </div>
                    <div class="form-group">
                        <label for="leaderEmail">Email ID</label>
                        <input type="email" id="leaderEmail" name="leaderEmail" required>
                    </div>
                    <h3>Team Member Information</h3>
                    <div class="form-group">
                        <label for="memberName">Name</label>
                        <input type="text" id="memberName" name="memberName" required>
                    </div>
                    <div class="form-group">
                        <label for="memberEnrollment">Enrollment Number</label>
                        <input type="text" id="memberEnrollment" name="memberEnrollment" required>
                    </div>
                </div>
            `;
        } else if (numberSelect === "GROUP") {
            participantsDetails.innerHTML = `
                <div class="form-section">
                    <h3>Team Leader Information</h3>
                    <div class="form-group">
                        <label for="leaderName">Name</label>
                        <input type="text" id="leaderName" name="leaderName" required>
                    </div>
                    <div class="form-group">
                        <label for="leaderEnrollment">Enrollment Number</label>
                        <input type="text" id="leaderEnrollment" name="leaderEnrollment" required>
                    </div>
                    <div class="form-group">
                        <label for="leaderEmail">Email ID</label>
                        <input type="email" id="leaderEmail" name="leaderEmail" required>
                    </div>
                    <h3>Additional Team Members</h3>
                    <div id="teamMembersContainer"></div>
                    <div class="form-group">
                        <label for="numTeamMembers">Number of Additional Members:</label>
                        <input type="number" id="numTeamMembers" name="numTeamMembers" min="1" max="10" onchange="addTeamMembersFields()">
                    </div>
                </div>
            `;
        }
    }

    // Function to dynamically add fields for additional team members
    function addTeamMembersFields() {
        const teamMembersContainer = document.getElementById("teamMembersContainer");
        const numMembers = document.getElementById("numTeamMembers").value;

        // Clear any existing member fields
        teamMembersContainer.innerHTML = "";

        // Create fields for each additional member
        for (let i = 1; i <= numMembers; i++) {
            teamMembersContainer.innerHTML += `
                <div class="form-group">
                    <label for="member${i}Name">Team Member ${i} Name</label>
                    <input type="text" id="member${i}Name" name="member${i}Name" required>
                </div>
                <div class="form-group">
                    <label for="member${i}Enrollment">Team Member ${i} Enrollment Number</label>
                    <input type="text" id="member${i}Enrollment" name="member${i}Enrollment" required>
                </div> `;
            }
        }
</script>

</body>
</html>